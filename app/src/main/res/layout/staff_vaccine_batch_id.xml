<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/vaccine_id_item">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_vaccine_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20dp"
                tools:text="Vaccine ID" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="4dp"
                android:text="Remarks:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_remarks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20sp"
                tools:text="Remarks" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_one"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="Remarks:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20dp"
                tools:text="Appointment Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:text="Status:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20sp"
                tools:text="Status" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>