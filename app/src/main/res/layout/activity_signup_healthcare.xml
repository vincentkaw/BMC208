<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="#C94D618F"
    android:orientation="vertical"
    tools:context=".signup_healthcare">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PCVS"
        android:textSize="90sp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/welcome"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/enter_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="Enter username"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="#B8E3ED" />

    <EditText
        android:id="@+id/enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:background="#B8E3ED"/>

    <EditText
        android:id="@+id/enter_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="Enter fullname"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="#B8E3ED"
        />

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="Enter email"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="#B8E3ED"
        />

    <EditText
        android:id="@+id/enter_staffid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="Enter staff ID"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:background="#B8E3ED"
        />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="10dp"/>

    <TextView
        android:id="@+id/text_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have an account? Sign in"
        android:textSize="15sp"
        android:textColor="#FDFDFD"
        android:textAlignment="center"
        android:layout_marginBottom="12dp" />

</LinearLayout>