<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_patient_batch_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Batch ID"
            android:textColor="#222222"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_patient_batch_id"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_patient_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/text_view_patient_batch_id"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20dp"
                tools:text="Expiry Date"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/text_view_patient_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/text_view_patient_batch_id"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/text_view_patient_expiry_date"
                android:fontFamily="sans-serif-medium"
                android:textColor="#555555"
                android:textSize="20sp"
                tools:text="Quantity"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>